{
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "check-types": "turbo check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest",
    "test:scripts": "vitest tests/scripts",
    "test:scripts:unit": "vitest tests/scripts/unit",
    "test:scripts:integration": "vitest tests/scripts/integration",
    "test:scripts:coverage": "vitest --coverage tests/scripts",
    "test:scripts:watch": "vitest --watch tests/scripts",
    "dev:services": "docker-compose up -d",
    "prepare": "husky install",
    "windows:android:swarm": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/Launch-Swarm-Android.ps1",
    "windows:android:single": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/Run-Android-Emulator.ps1",
    "windows:android:setup-env": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/setup-android-env.ps1",
    "windows:android:setup-avds": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/Setup-Android-AVDs.ps1",
    "windows:windows:swarm": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/Launch-Swarm-Windows.ps1",
    "windows:windows:single": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/Run-Windows-Instance.ps1",
    "windows:enable-dev-mode": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/enable-developer-mode.ps1",
    "macos:android:swarm": "./scripts/launch-swarm-android.sh",
    "macos:android:single": "./scripts/run-android-emulator.sh",
    "ios:swarm": "./scripts/ios-swarm.sh",
    "ios:sync-swarm": "bun run ./scripts/sync-swarm.ts",
    "ios:restart-vite": "./scripts/restart-vite.sh",
    "ios:restart-vite-swarm": "./scripts/restart-vite-swarm.sh",
    "ios:restart-simulators": "./scripts/restart-ios-simulators.sh"
  },
  "dependencies": {
    "@sveltejs/kit": "^2.42.2",
    "vite": "^7.1.6"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
